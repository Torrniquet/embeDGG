{
  "manifest_version": 3,
  "name": "embeDGG",
  "version": "0.1.0",
  "description": "Lightweight embeds for tweets and media in destiny.gg embed chat.",
  "author": "Torrniquet",
  "browser_specific_settings": {
    "gecko": {
      "id": "embedgg@torrniquet.dev",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "embeDGG"
  },
  "host_permissions": [
    "https://destiny.gg/*",
    "https://*.destiny.gg/*",
    "https://twitter.com/*",
    "https://*.twitter.com/*",
    "https://x.com/*",
    "https://t.co/*",
    "https://pic.twitter.com/*",
    "https://video.twimg.com/*",
    "https://pbs.twimg.com/*",
    "https://cdn.syndication.twimg.com/*",
    "https://nitter.net/*",
    "https://fxtwitter.com/*",
    "https://vxtwitter.com/*",
    "https://api.vxtwitter.com/*",
    "https://imgur.com/*",
    "https://i.imgur.com/*",
    "https://i.kym-cdn.com/*",
    "https://flickr.com/*",
    "https://*.flickr.com/*",
    "https://youtube.com/*",
    "https://*.youtube.com/*",
    "https://youtu.be/*",
    "https://vimeo.com/*",
    "https://instagram.com/*",
    "https://*.instagram.com/*",
    "https://ddinstagram.com/*",
    "https://*.ddinstagram.com/*",
    "https://*.cdninstagram.com/*",
    "https://giphy.com/*",
    "https://*.giphy.com/*",
    "https://tenor.com/*",
    "https://*.tenor.com/*",
    "https://streamable.com/*",
    "https://dropbox.com/*",
    "https://*.dropboxusercontent.com/*",
    "https://onedrive.live.com/*",
    "https://photos.google.com/*",
    "https://lh3.googleusercontent.com/*",
    "https://icloud.com/*",
    "https://res.cloudinary.com/*",
    "https://s3.amazonaws.com/*",
    "https://cdn.discordapp.com/*",
    "https://i.4cdn.org/*",
    "https://kick.com/*",
    "https://twitch.tv/*",
    "https://*.twitch.tv/*",
    "https://files.catbox.moe/*",
    "https://packaged-media.redd.it/*",
    "https://reddit.com/*",
    "https://*.reddit.com/*",
    "https://i.redd.it/*",
    "https://v.redd.it/*"
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.destiny.gg/embed/chat*",
        "https://destiny.gg/embed/chat*",
        "https://www.destiny.gg/bigscreen*",
        "https://destiny.gg/bigscreen*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "icons": {}
}
